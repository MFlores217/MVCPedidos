@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}

<table class="table table-striped" id="tablaProductos">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Nombre)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(p=>producto.Id)
                </td>
                <td>
                    @Html.DisplayFor(p=>producto.Nombre)
                </td>
                <td>
                    @{
                        string javascript = $"SeleccionarProducto('{producto.Id}','{producto.Nombre}');";
                    }
                    <a href="#" onclick="@javascript" data-bs-dismiss="modal">Seleccionar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>

</table>
