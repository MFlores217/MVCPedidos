@model Orden
@{
    ViewData["Title"] = "Crear orden";
}
<div class="row">
    <div class="col-8 mx-auto">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <form asp-action="Nuevo">
            <div class="form-group">
                <input id="clienteId" type="hidden" asp-for="ClienteId" class="form-control" />
                <label class="form-label">Cliente</label>
                <div class="input-group">
                    <input type="text" readonly id="clienteNombre" class="form-control" />
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#clientesModal">
                        Buscar cliente
                    </button>
                </div>
                
                <span asp-validation-for="ClienteId" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary mt-3" value="Guardar"/>
            </div>
        </form>
    </div>
    <div class="modal fade" id="clientesModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Buscar clientes</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              @await Html.PartialAsync("BuscarCliente", ViewData["Clientes"])
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          </div>
        </div>
      </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/clientes.js"></script>
}
